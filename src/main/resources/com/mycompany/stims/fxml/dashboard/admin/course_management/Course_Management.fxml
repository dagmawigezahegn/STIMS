<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="dynamicContentContainer" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.stims.controller.dashboard.admin.course_management.CourseManagementController">
   <children>
      <AnchorPane fx:id="contentArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css">
         <children>
            <Label alignment="TOP_LEFT" layoutX="15.0" layoutY="15.0" styleClass="form-title" text="Course Management">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon glyphName="UNIVERSITY" />
               </graphic>
            </Label>
            <!-- Use a VBox to arrange buttons vertically -->
            <VBox alignment="CENTER" spacing="20" styleClass="white-bg" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80.0">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
               
               <!-- Button: Courses -->
               <Button fx:id="coursesButton" mnemonicParsing="false" styleClass="add-btn" text="Courses">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="BOOK" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
               <!-- Button: Course Offerings -->
               <Button fx:id="courseOfferingsButton" mnemonicParsing="false" styleClass="add-btn" text="Course Offerings">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="LINK" glyphStyle="edit" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
               <!-- Button: Enroll Students To Courses -->
               <Button fx:id="enrollStudentsButton" mnemonicParsing="false" styleClass="add-btn" text="Enroll Students To Courses">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="EXTERNAL_LINK_SQUARE" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
