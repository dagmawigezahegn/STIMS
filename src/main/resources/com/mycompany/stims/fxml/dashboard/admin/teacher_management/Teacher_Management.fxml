<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="dynamicContentContainer" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.stims.controller.dashboard.admin.teacher_management.TeacherManagementController">
   <children>
      <AnchorPane fx:id="contentArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css">
         <children>
            <Label alignment="TOP_LEFT" layoutX="15.0" layoutY="15.0" styleClass="form-title" text="Teacher Management">
               <font>
                  <Font name="Arial Black" size="24.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon glyphName="USER" />
               </graphic>
            </Label>
            <!-- Use a VBox to arrange buttons vertically -->
            <VBox alignment="CENTER" layoutX="20.0" layoutY="38.0" spacing="20" styleClass="white-bg" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
               
                     <!-- Button: Add Teacher -->
               <Button fx:id="addTeacherButton" mnemonicParsing="false" styleClass="add-btn" text="Add Teacher">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="USER_PLUS" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
                     <!-- Button: Edit Teacher -->
               <Button fx:id="editTeacherButton" mnemonicParsing="false" styleClass="add-btn" text="Edit Teacher">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
                     <!-- Button: Assign Course To Teacher -->
               <Button fx:id="assignCourseToTeacherButton" mnemonicParsing="false" styleClass="add-btn" text="Assign Course To Teacher">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="EXTERNAL_LINK" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
                     <!-- Button: View Teacher Profile -->
               <Button fx:id="viewTeacherProfileButton" mnemonicParsing="false" styleClass="add-btn" text="View Teacher Profile">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
