<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="dynamicContentContainer" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.stims.controller.dashboard.admin.student_management.Student_ManagementController">
   <children>
      <AnchorPane fx:id="contentArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css">
         <children>
            <!-- Title -->
            <Label alignment="TOP_LEFT" layoutX="15.0" layoutY="15.0" styleClass="form-title" text="Student Management" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="14.0">
               <graphic>
                  <FontAwesomeIcon glyphName="USERS" />
               </graphic>
            </Label>
      
            <!-- Buttons Container -->
            <VBox alignment="CENTER" spacing="20" styleClass="white-bg" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="80">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
      
               <!-- Button: Register Student -->
               <Button fx:id="registerStudentButton" mnemonicParsing="false" styleClass="add-btn" text="Register Student">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="USER_PLUS" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
      
               <!-- Button: Edit Registration -->
               <Button fx:id="editRegistrationButton" mnemonicParsing="false" styleClass="add-btn" text="Edit Registration">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="EDIT" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
      
               <!-- Button: Student Academic Records -->
               <Button fx:id="studentAcademicRecordsButton" mnemonicParsing="false" styleClass="add-btn" text="Student Academic Records">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="UNIVERSITY" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
      
               <!-- Button: View Student Profiles -->
               <Button fx:id="viewStudentProfilesButton" mnemonicParsing="false" styleClass="add-btn" text="View Student Profiles">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="SEARCH" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
