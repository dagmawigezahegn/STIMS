<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="dynamicContentContainer" styleClass="white-bg" stylesheets="@../../../../css/dashboardDesign.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.stims.controller.dashboard.admin.profile.ProfileController">
   <children>
      <AnchorPane fx:id="contentArea">
         <children>
            <!-- Title -->
            <Label layoutX="15.0" layoutY="15.0" styleClass="form-title" text="Profiles &amp; Settings">
               <font>
                  <Font name="Arial Bold" size="24.0" />
               </font>
               <graphic>
                  <FontAwesomeIcon glyphName="GEAR" />
               </graphic>
            </Label>
            
                  <!-- Buttons -->
            <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
               
                     <!-- Button: View Admin Profile -->
               <Button fx:id="viewProfileButton" mnemonicParsing="false" prefWidth="180.0" styleClass="add-btn" text="View Profile">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="USER" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
                     <!-- Button: Change Username -->
               <Button fx:id="changeUsernameButton" mnemonicParsing="false" prefWidth="180.0" styleClass="add-btn" text="Change Username">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="PENCIL_SQUARE" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
               
                     <!-- Button: Change Password -->
               <Button fx:id="changePasswordButton" mnemonicParsing="false" prefWidth="180.0" styleClass="add-btn" text="Change Password">
                  <graphic>
                     <FontAwesomeIcon fill="WHITE" glyphName="LOCK" size="1.5em" />
                  </graphic>
                  <font>
                     <Font name="Arial" size="14.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</StackPane>
